---
import Page from '@levino/shipyard-base/layouts/Page.astro'
---

<Page title="Page Not Found" locale="en">
  <div class="hero min-h-[60vh]">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-9xl font-bold text-primary">404</h1>
        <h2 class="text-3xl font-bold mt-4">Page Not Found</h2>
        <p class="py-6 text-lg">
          The page you're looking for doesn't exist or has been moved.
        </p>
        <div class="flex gap-4 justify-center">
          <a href="/en/" class="btn btn-primary">Go to Homepage</a>
          <a href="/en/docs/" class="btn btn-outline">View Documentation</a>
        </div>
      </div>
    </div>
  </div>
</Page>
