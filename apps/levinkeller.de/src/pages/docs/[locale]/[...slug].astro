---
import Layout from '@/layouts/Page.astro'
import { getCollection } from 'astro:content'
import Sidebar from './_Sidebar.astro'

export async function getStaticPaths() {
  const getParams = (slug: string) => {
    const [locale, ...rest] = slug.split('/')
    return {
      slug: rest.length ? rest.join('/') : undefined,
      locale,
    }
  }
  const docs = await getCollection('docs')

  return docs.map((entry) => ({
    params: getParams(entry.slug),
    props: { entry },
  }))
}
// 2. For your template, you can get the entry directly from the prop
const { entry } = Astro.props
const { Content } = await entry.render()
---

<Layout>
  <div
    class="container flex-1 items-start md:grid md:grid-cols-[220px_minmax(0,1fr)] md:gap-6 lg:grid-cols-[240px_minmax(0,1fr)] lg:gap-1"
  >
    <aside class="hidden md:block">
      <Sidebar />
    </aside>

    <main
      class="relative py-6 lg:gap-10 lg:py-8 xl:grid xl:grid-cols-[1fr_300px]"
    >
      <div class="prose mx-auto">
        <Content />
      </div>
    </main>
  </div>
</Layout>
