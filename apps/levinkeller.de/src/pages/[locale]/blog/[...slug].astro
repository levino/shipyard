---
export { getStaticPaths } from '@shipyard/blog'
import Layout from '@shipyard/blog/Layout.astro'
import { TableOfContents } from '@shipyard/base/components/TableOfContents'

const { entry } = Astro.props
const { Content, headings } = await entry.render()
---

<Layout>
  <div>
    <div class="prose mx-auto w-full px-8">
      <Content />
    </div>
    <TableOfContents links={headings} />
  </div>
  <div class="giscus mx-auto mt-8 max-w-prose"></div>
</Layout>
<script
  src="https://giscus.app/client.js"
  data-repo="levino/levinkeller.de"
  data-repo-id="R_kgDOJYqaDg"
  data-category="Blog Post Comments"
  data-category-id="DIC_kwDOJYqaDs4CiMNf"
  data-mapping="pathname"
  data-strict="0"
  data-reactions-enabled="1"
  data-emit-metadata="0"
  data-input-position="bottom"
  data-theme="preferred_color_scheme"
  data-lang="de"
  crossorigin="anonymous"
  async></script>
