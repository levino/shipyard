---
/**
 * This is an example layout demonstrating how to customize the TableOfContents label.
 * It uses a simplified setup without the full docs sidebar integration.
 */
import { TableOfContents } from '@levino/shipyard-base/components'
import BaseLayout from '@levino/shipyard-base/layouts/Page.astro'

interface Props {
  headings?: { depth: number; text: string; slug: string }[]
}

const { headings = [] } = Astro.props
---

<BaseLayout>
  <div class="prose mx-auto xl:mr-72">
    {/* Example: Custom TableOfContents label - "In this article" instead of default "On this page" */}
    <TableOfContents links={headings} label="In this article" />
    <slot />
  </div>
</BaseLayout>
