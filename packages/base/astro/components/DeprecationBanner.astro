---
/**
 * Deprecation banner component that displays a warning when viewing deprecated docs.
 * Shows a prominent alert with a link to the same page in the latest version.
 * The banner can be dismissed but will reappear on navigation.
 */

interface Props {
  /** The deprecated version being viewed */
  version: string
  /** Human-readable label for the deprecated version */
  label?: string
  /** The current/latest version to link to */
  currentVersion: string
  /** Human-readable label for the current version */
  currentVersionLabel?: string
  /** URL to the same page in the latest version */
  latestVersionUrl: string
  /** Additional CSS classes */
  class?: string
}

const {
  version,
  label,
  currentVersion,
  currentVersionLabel,
  latestVersionUrl,
  class: className,
} = Astro.props

const displayVersion = label ?? version
const displayCurrentVersion = currentVersionLabel ?? currentVersion
---

<div
  class:list={['deprecation-banner', className]}
  data-testid="deprecation-banner"
  role="alert"
>
  <div class="alert alert-warning shadow-lg">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-6 w-6 shrink-0 stroke-current"
      fill="none"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
      />
    </svg>
    <div class="flex-1">
      <h3 class="font-bold">Outdated Documentation</h3>
      <p class="text-sm">
        You are viewing documentation for <strong>{displayVersion}</strong>, which is no longer
        maintained.
        <a href={latestVersionUrl} class="link link-hover font-medium">
          View the latest version ({displayCurrentVersion})
        </a>
      </p>
    </div>
    <button
      type="button"
      class="btn btn-ghost btn-sm btn-circle"
      aria-label="Dismiss banner"
      data-dismiss-banner
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>
</div>

<script>
  // Handle dismiss button click
  // The banner will reappear on navigation (page reload)
  function initDeprecationBanner() {
    const banners = document.querySelectorAll('.deprecation-banner')
    banners.forEach((banner) => {
      const dismissBtn = banner.querySelector('[data-dismiss-banner]')
      if (dismissBtn) {
        dismissBtn.addEventListener('click', () => {
          banner.classList.add('hidden')
        })
      }
    })
  }

  // Initialize on page load
  initDeprecationBanner()

  // Re-initialize on Astro view transitions
  document.addEventListener('astro:page-load', initDeprecationBanner)
</script>
