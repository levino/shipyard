---
import { i18n } from 'astro:config/server'
import { type CollectionEntry, getCollection } from 'astro:content'
import blogConfig from 'virtual:shipyard-blog/config'
import type { GetStaticPaths } from 'astro'
import { getReadingTime } from '../src/index'
import BlogReadingTime from './BlogReadingTime.astro'
import BlogTags from './BlogTags.astro'
import Layout from './Layout.astro'

const {
  postsPerPage,
  showReadingTime,
  truncateMarker,
  includeDraftsInDev,
  routeBasePath,
} = blogConfig

// Filter out draft and unlisted posts for production
const isDev = import.meta.env.DEV
const shouldIncludePost = (post: CollectionEntry<'blog'>) => {
  // Exclude unlisted posts from listings
  if (post.data.unlisted) return false
  // Include drafts only in dev mode if configured
  if (post.data.draft && !(isDev && includeDraftsInDev)) return false
  return true
}

export const getStaticPaths = (() => {
  if (i18n) {
    return i18n.locales.map((locale) => {
      if (typeof locale !== 'string') {
        throw new Error('shipyard does only support strings as locales.')
      }
      return {
        params: {
          locale,
        },
      }
    })
  } else {
    // For non-i18n, return a single path without locale
    return [{ params: {} }]
  }
}) satisfies GetStaticPaths

// Page 1 is always the index page (no page param)
const currentPage = 1

const entries = await getCollection('blog').then((posts) => {
  const filteredPosts = posts.filter(shouldIncludePost)

  if (i18n) {
    // With i18n: filter by locale
    return filteredPosts
      .filter(({ id }) => {
        const [postLocale] = id.split('/')
        return postLocale === Astro.currentLocale
      })
      .toSorted((a, b) => b.data.date.getTime() - a.data.date.getTime())
  } else {
    // Without i18n: return all posts
    return filteredPosts.toSorted(
      (a, b) => b.data.date.getTime() - a.data.date.getTime(),
    )
  }
})

// Calculate pagination
const totalPosts = entries.length
const totalPages = Math.ceil(totalPosts / postsPerPage)
const startIndex = (currentPage - 1) * postsPerPage
const endIndex = startIndex + postsPerPage
const paginatedEntries = entries.slice(startIndex, endIndex)

const getBlogPostLink = (id: string, locale?: string) => {
  if (i18n && locale) {
    return id.replace(`${locale}/`, `${locale}/${routeBasePath}/`)
  } else {
    return `${routeBasePath}/${id}`
  }
}

const getPageLink = (page: number) => {
  const basePath = i18n
    ? `/${Astro.currentLocale}/${routeBasePath}`
    : `/${routeBasePath}`
  if (page === 1) {
    return basePath
  }
  return `${basePath}/page/${page}`
}

const formatDate = new Intl.DateTimeFormat(Astro.currentLocale || 'en').format

// Generate page numbers to display (3 adjacent pages around current)
const getAdjacentPages = () => {
  const pages: number[] = []
  const adjacentCount = 1 // Show 1 page before and after current

  const start = Math.max(2, currentPage - adjacentCount)
  const end = Math.min(totalPages - 1, currentPage + adjacentCount)

  for (let pageNum = start; pageNum <= end; pageNum++) {
    pages.push(pageNum)
  }

  return pages
}

const adjacentPages = getAdjacentPages()
const showLeftEllipsis = adjacentPages.length > 0 && adjacentPages[0] > 2
const showRightEllipsis =
  adjacentPages.length > 0 &&
  adjacentPages[adjacentPages.length - 1] < totalPages - 1

// Helper to extract excerpt from body using truncation marker
const getExcerpt = (body: string | undefined, description: string): string => {
  if (!body) return description
  const markerIndex = body.indexOf(truncateMarker)
  if (markerIndex === -1) return description
  // Get content before marker, strip markdown for clean excerpt
  const excerpt = body.slice(0, markerIndex).trim()
  // If excerpt is too short, fall back to description
  return excerpt.length > 50
    ? `${excerpt.replace(/[#*_`]/g, '').slice(0, 200)}...`
    : description
}

// Tag base URL for links
const tagBaseUrl = i18n
  ? `/${Astro.currentLocale}/${routeBasePath}/tags`
  : `/${routeBasePath}/tags`
---

<Layout title={blogConfig.blogTitle}>
  <div class="max-w-7xl mx-auto">
    <h1 class="text-4xl font-bold mb-10">{blogConfig.blogTitle}</h1>
    <div class="space-y-6">
      {
        paginatedEntries.map((entry, index) => {
          const readingTime = showReadingTime && entry.body
            ? getReadingTime(entry.body)
            : undefined
          const tags = entry.data.tags ?? []
          const postLink = `/${getBlogPostLink(entry.id, Astro.currentLocale)}`
          const hasImage = !!entry.data.image
          const isFirst = index === 0

          return isFirst && hasImage ? (
            /* Featured first post with large image */
            <article class="group overflow-hidden rounded-2xl bg-base-200/50 transition-colors hover:bg-base-200" data-testid="blog-post-item">
              <a class="block no-underline" href={postLink} data-testid="blog-post-link">
                <div class="aspect-[2/1] overflow-hidden">
                  <img
                    src={entry.data.image}
                    alt={entry.data.title}
                    class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-[1.02]"
                    loading="eager"
                  />
                </div>
              </a>
              <div class="p-6">
                {entry.data.draft && (
                  <span class="badge badge-warning mb-3">Draft</span>
                )}
                <div class="mb-3 flex flex-wrap items-center gap-2 text-sm text-base-content/60">
                  <time datetime={entry.data.date.toISOString()}>{formatDate(entry.data.date)}</time>
                  {readingTime && (
                    <>
                      <span class="text-base-content/30">&middot;</span>
                      <BlogReadingTime text={readingTime.text} />
                    </>
                  )}
                </div>
                <a class="block no-underline" href={postLink}>
                  <h2 class="my-0 text-2xl font-bold transition-colors group-hover:text-primary md:text-3xl">{entry.data.title}</h2>
                </a>
                <p class="mt-3 text-base-content/70 leading-relaxed">{entry.data.description}</p>
                {tags.length > 0 && (
                  <div class="mt-4">
                    <BlogTags tags={tags} baseUrl={tagBaseUrl} />
                  </div>
                )}
              </div>
            </article>
          ) : (
            /* Standard post card */
            <article class="group flex gap-5 rounded-xl bg-base-200/30 p-4 transition-colors hover:bg-base-200/60 sm:p-5" data-testid="blog-post-item">
              {hasImage && (
                <a class="hidden flex-shrink-0 overflow-hidden rounded-lg sm:block" href={postLink}>
                  <img
                    src={entry.data.image}
                    alt={entry.data.title}
                    class="h-28 w-40 object-cover transition-transform duration-300 group-hover:scale-[1.03]"
                    loading="lazy"
                  />
                </a>
              )}
              <div class="min-w-0 flex-1">
                {entry.data.draft && (
                  <span class="badge badge-warning mb-2">Draft</span>
                )}
                <div class="mb-2 flex flex-wrap items-center gap-2 text-sm text-base-content/60">
                  <time datetime={entry.data.date.toISOString()}>{formatDate(entry.data.date)}</time>
                  {readingTime && (
                    <>
                      <span class="text-base-content/30">&middot;</span>
                      <BlogReadingTime text={readingTime.text} />
                    </>
                  )}
                </div>
                <a class="block no-underline" href={postLink} data-testid="blog-post-link">
                  <h2 class="my-0 text-xl font-semibold transition-colors group-hover:text-primary">{entry.data.title}</h2>
                </a>
                <p class="mt-2 line-clamp-2 text-sm text-base-content/70 leading-relaxed">{entry.data.description}</p>
                {tags.length > 0 && (
                  <div class="mt-3">
                    <BlogTags tags={tags} baseUrl={tagBaseUrl} />
                  </div>
                )}
              </div>
            </article>
          )
        })
      }
    </div>

    {totalPages > 1 && (
      <div class="join flex justify-center my-8" data-testid="pagination">
        {/* Prev button */}
        <a
          class:list={['join-item', 'btn', { 'btn-disabled': currentPage === 1 }]}
          href={currentPage > 1 ? getPageLink(currentPage - 1) : undefined}
          aria-label="Previous page"
          data-testid="pagination-prev"
        >
          prev
        </a>

        {/* First page */}
        <a
          class:list={['join-item', 'btn', { 'btn-active': currentPage === 1 }]}
          href={getPageLink(1)}
          data-testid="pagination-first"
        >
          first
        </a>

        {/* Left ellipsis */}
        {showLeftEllipsis && <span class="join-item btn btn-disabled">…</span>}

        {/* Adjacent pages (not including first and last) */}
        {adjacentPages.map((page) => (
          <a
            class:list={['join-item', 'btn', { 'btn-active': page === currentPage }]}
            href={getPageLink(page)}
          >
            {page}
          </a>
        ))}

        {/* Right ellipsis */}
        {showRightEllipsis && <span class="join-item btn btn-disabled">…</span>}

        {/* Last page (only if more than 1 page) */}
        {totalPages > 1 && (
          <a
            class:list={['join-item', 'btn', { 'btn-active': currentPage === totalPages }]}
            href={getPageLink(totalPages)}
            data-testid="pagination-last"
          >
            last
          </a>
        )}

        {/* Next button */}
        <a
          class:list={['join-item', 'btn', { 'btn-disabled': currentPage === totalPages }]}
          href={currentPage < totalPages ? getPageLink(currentPage + 1) : undefined}
          aria-label="Next page"
          data-testid="pagination-next"
        >
          next
        </a>
      </div>
    )}
  </div>
</Layout>
