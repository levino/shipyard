---
interface Props {
  newerPost?: {
    href: string
    title: string
  }
  olderPost?: {
    href: string
    title: string
  }
}

const { newerPost, olderPost } = Astro.props

// Only render if there's at least one link
const shouldRender = newerPost || olderPost
---

{
  shouldRender && (
    <nav class="mt-8 border-t border-base-300 pt-6" aria-label="Blog navigation">
      <div class="flex justify-between">
        <div>
          {newerPost ? (
            <a
              href={newerPost.href}
              class="btn btn-sm md:btn-md gap-2 lg:gap-3"
              rel="prev"
            >
              <svg
                class="h-6 w-6 fill-current md:h-8 md:w-8 rtl:rotate-180"
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
              >
                <path d="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z" />
              </svg>
              <div class="flex flex-col items-start gap-0.5 leading-[1.1]">
                <span class="text-base-content/50 hidden text-[0.5625rem] font-semibold tracking-wide md:block">
                  Newer
                </span>
                <span>{newerPost.title}</span>
              </div>
            </a>
          ) : null}
        </div>
        <div>
          {olderPost ? (
            <a
              href={olderPost.href}
              class="btn btn-neutral btn-sm md:btn-md gap-2 lg:gap-3"
              rel="next"
            >
              <div class="flex flex-col items-end gap-0.5 leading-[1.1]">
                <span class="text-neutral-content/50 hidden text-[0.5625rem] font-semibold tracking-wide md:block">
                  Older
                </span>
                <span>{olderPost.title}</span>
              </div>
              <svg
                class="h-6 w-6 fill-current md:h-8 md:w-8 rtl:rotate-180"
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
              >
                <path d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" />
              </svg>
            </a>
          ) : null}
        </div>
      </div>
    </nav>
  )
}
