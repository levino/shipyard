---
import type { PaginationLink } from '../src/pagination'

interface Props {
  prev?: PaginationLink
  next?: PaginationLink
}

const { prev, next } = Astro.props

// Only render if there's at least one link
const shouldRender = prev || next
---

{
  shouldRender && (
    <nav
      class="mt-8 border-t border-base-300 pt-6"
      aria-label="Docs navigation"
    >
      <div class="flex flex-col gap-4 sm:flex-row sm:justify-between">
        {prev ? (
          <a
            href={prev.href}
            class="btn btn-outline flex-1 justify-start sm:max-w-xs"
            rel="prev"
          >
            <span class="flex flex-col items-start gap-1 text-left">
              <span class="text-xs opacity-70">Previous</span>
              <span class="font-medium">{prev.title}</span>
            </span>
          </a>
        ) : (
          <div class="flex-1" />
        )}

        {next ? (
          <a
            href={next.href}
            class="btn btn-outline flex-1 justify-end sm:max-w-xs"
            rel="next"
          >
            <span class="flex flex-col items-end gap-1 text-right">
              <span class="text-xs opacity-70">Next</span>
              <span class="font-medium">{next.title}</span>
            </span>
          </a>
        ) : (
          <div class="flex-1" />
        )}
      </div>
    </nav>
  )
}
